@model estacionamento.Models.Ticket

@{
    ViewData["Title"] = "Novo Ticket";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Criar" method="post" class="needs-validation" novalidate>
                <div class="form-group mt-1">
                    <label for="Nome" class="control-label">Nome Do Cliente</label>
                    <input type="text" id="Nome" name="Nome" class="form-control"/>
                </div>
                <div class="form-group mt-1">
                    <label for="CPF" class="control-label"></label>
                    <input type="text" id="CPF" name="CPF" class="form-control"/>
                </div>
                <div class="form-group mt-1">
                    <label for="Placa" class="control-label"></label>
                    <input type="text" id="Placa" name="Placa" class="form-control" required/>
                </div>
                <div class="form-group mt-1">
                    <label for="Modelo" class="control-label"></label>
                    <input type="text" id="Modelo" name="Modelo" class="form-control" required/>
                </div>
                <div class="form-group mt-1">
                    <label for="Marca" class="control-label"></label>
                    <input type="text" id="Marca" name="Marca" class="form-control" required/>
                </div>
                <div class="form-group mt-1">
                    <label for="VagaId" class="control-label"></label>
                    <select name="VagaId" id="VagaId" asp-items="@ViewBag.Vagas">
                        <option value="">[Selecione uma vaga]</option>
                    </select>
                </div>
                <div class="text-center mt-2">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>