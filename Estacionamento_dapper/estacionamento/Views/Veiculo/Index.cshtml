@{
    ViewData["Title"] = "Veiculos";
}

<div class="text-center">
    <h1 class="display-4">Veiculos</h1>
    <a class="btn btn-primary" asp-area="" asp-controller="Veiculo" asp-action="Novo">Novo Veiculo</a>
</div>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome Cliente</th>
                <th>Placa</th>
                <th>Modelo</th>
                <th>Marca</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Cliente.Nome</td>
                    <td>@item.Placa</td>
                    <td>@item.Modelo</td>
                    <td>@item.Marca</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Id" asp-controller="Veiculo" class="btn btn-warning">Editar</a>
                    </td>
                    <td>
                        <form onsubmit="return confirm('confirma a exclusão?')" asp-action="Apagar" asp-controller="Veiculo" method="post">
                            <input type="hidden" name="id" value="@item.Id">
                            <button type="submit" class="btn btn-danger">excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
