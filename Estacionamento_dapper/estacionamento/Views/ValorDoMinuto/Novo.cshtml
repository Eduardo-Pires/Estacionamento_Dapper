@model estacionamento.Models.ValorDoMinuto

@{
    ViewData["Title"] = "Novo valor";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="container mt-4">
    <form asp-action="Criar" method="post" class="needs-validation">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group mt-1">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" required/>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Minutos" class="control-label"></label>
                <input asp-for="@Model.Minutos" class="form-control" required/>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="form-group col-md-6 text-center">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>
</div>
