@{
    ViewData["Title"] = "Valor do Minuto";
}

<div class="text-center">
    <h1 class="display-4">Valor do Minuto</h1>
    <a class="btn btn-primary" asp-area="" asp-controller="ValorDoMinuto" asp-action="Novo">Valores</a>
</div>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Minutos</th>
                <th>Valor</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Minutos</td>
                    <td>R$ @item.Valor</td>
                    <td>
                            <a asp-action="Editar" asp-route-id="@item.Id" asp-controller="ValorDoMinuto" class="btn btn-warning">Editar</a>
                    </td>
                    <td>
                        <form onsubmit="return confirm('confirma a exclusão?')" asp-action="Apagar" asp-controller="ValorDoMinuto" method="post">
                            <input type="hidden" name="id" value="@item.Id">
                            <button type="submit" class="btn btn-danger">excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
