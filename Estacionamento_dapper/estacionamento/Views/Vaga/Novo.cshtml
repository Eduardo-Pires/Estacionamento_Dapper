@model estacionamento.Models.Vaga

@{
    ViewData["Title"] = "Nova Vaga";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Criar" method="post" class="needs-validation" novalidate>
                <div class="form-group mt-1">
                    <label asp-for="CodigoLocalizacao" class="control-label"></label>
                    <input asp-for="CodigoLocalizacao" class="form-control" required/>
                    <span asp-validation-for="CodigoLocalizacao" class="text-danger"></span>
                </div>
                <div class="form-group mt-1">
                    <label asp-for="Ocupada" class="control-label"></label>
                    <input type="checkbox" asp-for="Ocupada" class="form-check"/>
                    <span asp-validation-for="Ocupada" class="text-danger"></span>
                </div>
                <div class="text-center mt-2">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
